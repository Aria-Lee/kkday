<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:id="@+id/simpleContainer">

    <ImageView
            android:id="@+id/simpleItemImg"
            android:layout_width="0dp"

            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars"
            android:layout_marginTop="8dp"
            android:background="@drawable/simple_img_background"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:scaleType="centerCrop" app:layout_constraintDimensionRatio="1:1"/>

    <TextView
            android:id="@+id/simpleName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            app:layout_constraintStart_toStartOf="@+id/simpleItemImg"
            app:layout_constraintTop_toBottomOf="@+id/simpleItemImg"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textSize="16sp" android:textStyle="bold" android:layout_marginTop="8dp"/>
</android.support.constraint.ConstraintLayout>